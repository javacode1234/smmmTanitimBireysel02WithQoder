generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model sitesettings {
  id              String   @id
  siteName        String   @default("SMMM Ofisi")
  siteDescription String?
  favicon         String?
  brandIcon       String?
  phone           String?
  email           String?
  address         String?
  mapLatitude     String?
  mapLongitude    String?
  mapEmbedUrl     String?
  facebookUrl     String?
  linkedinUrl     String?
  instagramUrl    String?
  youtubeUrl      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  threadsUrl      String?
  xUrl            String?
}
